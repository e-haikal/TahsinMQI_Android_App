<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    app:cardCornerRadius="@dimen/corner_radius_small"
    app:cardElevation="@dimen/elevation_low"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_surah_number"
            android:layout_width="64dp"
            android:layout_height="54dp"
            android:background="@drawable/img_number_bg"
            android:gravity="center"
            android:text="@string/placeholder_surah_number"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_body"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/margin_medium"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_surah_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_surah_name"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/text_size_heading_medium"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginBottom="@dimen/margin_small" />

            <TextView
                android:id="@+id/tv_surah_total_verse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_surah_total_verse"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/text_size_body"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_right_arrow"
            android:layout_gravity="center" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
