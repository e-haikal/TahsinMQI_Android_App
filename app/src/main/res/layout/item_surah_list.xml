<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/margin_small"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_surah_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="@dimen/padding_medium"
        android:src="@drawable/img_placeholder_greenish" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/tv_surah_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_surah_name"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/text_size_heading_small"/>

        <TextView
            android:id="@+id/tv_surah_total_verse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/placeholder_surah_total_verse"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/text_size_body" />
    </LinearLayout>



</LinearLayout>