<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/muted_green"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_medium">
        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/materi_mim_1"/>
        <View
            android:id="@+id/view_bg_button_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_1"
            android:background="@color/light_yellow"/>
        <ImageView
            android:id="@+id/iv_btn_play_1"
            android:src="@drawable/tombol_putar"
            android:background="@color/light_yellow"
            app:layout_constraintTop_toTopOf="@id/view_bg_button_1"
            app:layout_constraintBottom_toBottomOf="@id/view_bg_button_1"
            app:layout_constraintEnd_toEndOf="@id/view_bg_button_1"
            app:layout_constraintStart_toStartOf="@id/view_bg_button_1"
            app:layout_constraintHorizontal_bias="1"
            android:adjustViewBounds="true"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_bg_button_1"
            android:src="@drawable/materi_mim_2"/>
        <View
            android:id="@+id/view_bg_button_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_2"
            android:background="@color/light_yellow"/>
        <ImageView
            android:id="@+id/iv_btn_play_2"
            android:src="@drawable/tombol_putar"
            android:background="@color/light_yellow"
            app:layout_constraintTop_toTopOf="@id/view_bg_button_2"
            app:layout_constraintBottom_toBottomOf="@id/view_bg_button_2"
            app:layout_constraintEnd_toEndOf="@id/view_bg_button_2"
            app:layout_constraintStart_toStartOf="@id/view_bg_button_2"
            app:layout_constraintHorizontal_bias="1"
            android:adjustViewBounds="true"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_bg_button_2"
            android:src="@drawable/materi_mim_3"/>
        <View
            android:id="@+id/view_bg_button_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_3"
            android:background="@color/light_yellow"/>
        <ImageView
            android:id="@+id/iv_btn_play_3"
            android:src="@drawable/tombol_putar"
            android:background="@color/light_yellow"
            app:layout_constraintTop_toTopOf="@id/view_bg_button_3"
            app:layout_constraintBottom_toBottomOf="@id/view_bg_button_3"
            app:layout_constraintEnd_toEndOf="@id/view_bg_button_3"
            app:layout_constraintStart_toStartOf="@id/view_bg_button_3"
            app:layout_constraintHorizontal_bias="1"
            android:adjustViewBounds="true"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/view_separator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_bg_button_3"
            android:layout_width="match_parent"
            android:layout_height="120dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>