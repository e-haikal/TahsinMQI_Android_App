        tools:layout="@layout/fragment_materi_al_lisan_depan" >
    </fragment>
    <!--    Materi chapter two - Al-lisan-tengah-->
    <fragment
        android:id="@+id/navigation_sub_material_chapter_two_al_lisan_tengah"
        android:name="com.siaptekno.tahsinmqi.ui.materi.chapter_two.al_lisan_tengah.MateriAlLisanTengahFragment"
        android:label="@string/title_sub_material_chapter_two"
        tools:layout="@layout/fragment_materi_al_lisan_tengah" >
    </fragment>
    <!--    Materi chapter two - Al-lisan-belakang-->
    <fragment
        android:id="@+id/navigation_sub_material_chapter_two_al_lisan_belakang"
        android:name="com.siaptekno.tahsinmqi.ui.materi.chapter_two.al_lisan_belakang.MateriAlLisanBelakangFragment"
        android:label="@string/title_sub_material_chapter_two"
        tools:layout="@layout/fragment_materi_al_lisan_belakang" >
    </fragment>

    <fragment
        android:id="@+id/navigation_sub_material_chapter_two_asy_syafatan"
        android:name="com.siaptekno.tahsinmqi.ui.materi.chapter_two.asy_syafatan.MateriAsySyafatanFragment"
        android:label="@string/title_sub_material_chapter_two"
        tools:layout="@layout/fragment_materi_asy_syafatan" >
    </fragment>

    <fragment
        android:id="@+id/navigation_sub_material_chapter_two_al_khaisyum"
        android:name="com.siaptekno.tahsinmqi.ui.materi.chapter_two.al_khaisyum.MateriAlKhaisyumFragment"
        android:label="@string/title_sub_material_chapter_two"
        tools:layout="@layout/fragment_materi_al_khaisyum" >
        <action
            android:id="@+id/action_navigation_sub_material_chapter_two_al_khaisyum_self"
            app:destination="@id/navigation_sub_material_chapter_two_al_khaisyum" />
    </fragment>

    <fragment
        android:id="@+id/navigation_material_chapter_three"
        android:name="com.siaptekno.tahsinmqi.ui.materi.chapter_three.MateriSifatHurufFragment"
        android:label="@string/title_material_chapter_three"
        tools:layout="@layout/fragment_materi_sifat_huruf" >
    </fragment>

    <fragment
        android:id="@+id/navigation_material_chapter_four"
        android:name="com.siaptekno.tahsinmqi.ui.materi.chapter_four.HukumBacaanFragment"
        android:label="@string/title_material_chapter_four"
        tools:layout="@layout/fragment_materi_hukum_bacaan" >
    </fragment>



    <fragment
        android:id="@+id/navigation_testing"
        android:name="com.siaptekno.tahsinmqi.ui.materi.chapter_one.SubMaterialChapterOneFragment"
        android:label="@string/title_sub_material_chapter_two"
        tools:layout="@layout/fragment_sub_materi_chapter_2" >
    </fragment>


</navigation>